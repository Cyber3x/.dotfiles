#!/usr/bin/env bash
# ----------------------------------------
# oo - Fuzzy finder for Obsidian notes
# Opens markdown files in nvim with preview via bat
# ----------------------------------------

OBSIDIAN_DIR="$HOME/Documents/notes/second-brain"

# === CHECK DEPENDENCIES ===
for cmd in fd fzf bat nvim; do
    if ! command -v "$cmd" >/dev/null 2>&1; then
        echo "Error: '$cmd' is required but not installed." >&2
        exit 1
    fi
done

# === ENSURE VAULT EXISTS ===
if [[ ! -d "$OBSIDIAN_DIR" ]]; then
    echo "Error: Obsidian directory not found at: $OBSIDIAN_DIR" >&2
    exit 1
fi

# === MAIN LOGIC ===
cd "$OBSIDIAN_DIR" || exit

file=$(
    fd . -e md \
    | fzf --preview "bat --style=numbers --color=always {} | head -500" \
          --prompt="Obsidian Note > " \
          --border --ansi
)

if [[ -n "$file" ]]; then
    nvim "$OBSIDIAN_DIR/$file"
    echo -e "Done editing: \033[1;36m${file}\033[0m"
else
    echo "No file selected."
fi

